{
    "$schema": "http://json-schema.org/draft-04/schema",
    "description": "Input to compute simulate the absorption Spectrum",
    "type": "object",
    "properties": {
	"workflow": {
	    "type": "string",
	    "description": "Name of the workflow to run",
	    "enum": [
		"absorption_spectrum",
		"derivative_couplings"
	    ]
	},
	"initial_states": {
	    "type": "array",
	    "description": "Initial states of the transitions"
	},
	"final_states": {
	    "type": "array",
	    "description": "final states of the transitions"
	},
	"energy_range": {
	    "type":  "array",
	    "description": "Range of energy in eV to simulate the spectrum",
	    "minItems": 2,
	    "maxItems": 2
	},
	"general_settings": {
	    "$ref": "general_settings"
	}
    },
    "required": [
	"settings_main",
	"settings_guess"
  ]
}
